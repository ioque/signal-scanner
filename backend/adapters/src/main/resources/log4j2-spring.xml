<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="KAFKA_URL">localhost:9092</Property>
        <Property name="LOG_FILE_PATH">build/logs</Property>
        <Property name="TECHNICAL_LOG_FILE_NAME">trading-data-processor-technical</Property>
        <Property name="BUSINESS_LOG_FILE_NAME">trading-data-processor-business</Property>
        <Property name="CONSOLE_LOG_LVL">DEBUG</Property>
        <Property name="FILE_LOG_LVL">INFO</Property>
    </Properties>

    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%date %highlight{%-5level }%t %style{%c{1.}}{bright,yellow}: %m%n%throwable"/>
        </Console>

        <RollingFile
            name="TechnicalRollingFileAppender"
            fileName="${LOG_FILE_PATH}/${TECHNICAL_LOG_FILE_NAME}.log"
            filePattern="${LOG_FILE_PATH}/${TECHNICAL_LOG_FILE_NAME}-%d{yyyy-MM-dd}-%i.log.gz"
            append="true"
            immediateFlush="true">
            <JsonTemplateLayout eventTemplateUri="classpath:JsonTemplateLayout.json" />
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingFile>
        <Failover name="TechnicalRollingFileAppenderFailover" primary="TechnicalRollingFileAppender">
            <Failovers>
                <AppenderRef ref="ConsoleAppender" />
            </Failovers>
        </Failover>


        <RollingFile
            name="BusinessRollingFileAppender"
            fileName="${LOG_FILE_PATH}/${BUSINESS_LOG_FILE_NAME}.log"
            filePattern="${LOG_FILE_PATH}/${BUSINESS_LOG_FILE_NAME}-%d{yyyy-MM-dd}-%i.log.gz"
            append="true"
            immediateFlush="true">
            <JsonTemplateLayout eventTemplateUri="classpath:JsonTemplateLayout.json" />
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingFile>
        <Failover name="BusinessRollingFileAppenderFailover" primary="BusinessRollingFileAppender">
            <Failovers>
                <AppenderRef ref="ConsoleAppender" />
            </Failovers>
        </Failover>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="ConsoleAppender" level="${CONSOLE_LOG_LVL}" />
            <AppenderRef ref="TechnicalRollingFileAppender" level="${FILE_LOG_LVL}" />
        </Root>
        <Logger name="org.apache.kafka" level="WARN" additivity="false">
            <AppenderRef ref="TechnicalRollingFileAppenderFailover" />
        </Logger>
        <AsyncLogger name="ASYNC_FILE_LOGGER" level="INFO" additivity="false">
            <AppenderRef ref="BusinessRollingFileAppenderFailover" />
        </AsyncLogger>
    </Loggers>

</Configuration>
