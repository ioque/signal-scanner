#!groovy
pipeline {
    agent none
    options {
        skipStagesAfterUnstable()
        skipDefaultCheckout()
    }
    environment {
        IMAGE_TAG = "v$BUILD_NUMBER"
        REACT_APP_API_URL = "http://192.168.0.62:8080"
        NEXUS_URL = "http://localhost:8001"
    }
    stages {
        stage('Git Checkout') {
            agent any
            steps {
                checkout scm
            }
        }

        stage("Test and Build") {
            parallel {
                stage("Backend") {
                    agent {
                        docker {
                            image 'openjdk:17-jdk-alpine'
                        }
                    }
                    stages {
                        stage('Application Test') {
                            steps {
                                sh 'cd backend && ./gradlew :application:test'
                                junit '**/application/build/test-results/test/*.xml'
                            }
                        }
                        stage('Adapters Test') {
                            steps {
                                sh 'cd backend && ./gradlew :adapters:test'
                                junit '**/adapters/build/test-results/test/*.xml'
                            }
                        }
                        stage('Build') {
                            steps {
                                sh 'cd backend && ./gradlew clean build -x test'
                            }
                        }
                    }
                }
                stage("Frontend") {
                    agent {
                        docker {
                            image 'node:17-bullseye'
                            args '-u root'
                        }
                    }
                    stages {
                        stage("Dependency Install") {
                            steps {
                                sh 'cd frontend && npm install'
                            }
                        }
                    }
                }
            }
        }


        stage('Push docker images') {
            agent any
            when { branch 'master' }
            steps {
                script {
                    sh "cd frontend && docker build . --build-arg REACT_APP_API_URL=${env.REACT_APP_API_URL} -t ioque/frontend:${env.IMAGE_TAG}"
                    sh "cd backend && docker build . -t ioque/backend:${env.IMAGE_TAG}"
                    sh "docker login 'nexus-cred' ${env.NEXUS_URL}"
                    sh "docker push ioque/frontend:${env.IMAGE_TAG}"
                    sh "docker push ioque/backend:${env.IMAGE_TAG}"
                    sh "docker rmi ioque/frontend:${env.IMAGE_TAG}"
                    sh "docker rmi ioque/backend:${env.IMAGE_TAG}"
                    sh "docker logout ${env.NEXUS_URL}"
                }
            }
        }
    }
}